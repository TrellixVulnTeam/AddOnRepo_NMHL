<window id="4000" type="window">
    <defaultcontrol always="false">1000</defaultcontrol>
    <allowoverlay>yes</allowoverlay>
    <backgroundcolor>ff000000</backgroundcolor>
    <visible>true</visible>
    <zorder>0</zorder>
    <previouswindow></previouswindow>
    <useincludes>false</useincludes>
    
    <controls>
    	<!-- Main background image -->
    	<control type="image">
            <description>Main background image</description>
            <posx></posx>
            <posy></posy>
            <width>1280</width>
            <height>720</height>
            <visible>true</visible>
            <colordiffuse>FFFFFFFF</colordiffuse>
            <fadetime>200</fadetime>
            <texture border="5" flipy="false" flipx="false">main-bg.png</texture>
            <aspectratio>stretch</aspectratio>
        </control>
        
        <control type="image" id="50">
            <description>Loading animation</description>
            <posx>576</posx>
            <posy>296</posy>
            <width>128</width>
            <height>128</height>
            <visible>true</visible>
            <colordiffuse>FFFFFFFF</colordiffuse>
            <fadetime>200</fadetime>
            <texture>common/main-loading.gif</texture>
            <aspectratio>stretch</aspectratio>
            <visible>True</visible>
        </control>
    </controls>
</window>
